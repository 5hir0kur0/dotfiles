[core]
	editor = nvim
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[alias]
	p = pull --ff-only
	lo = log --oneline
	unstage = reset HEAD --
	wdiff = diff --word-diff
	s = status --short --branch --show-stash
	g = grep -i --break --heading -e
	l = log --graph --pretty=format:'%C(auto)%h -%d %s %C(cyan)(%cr) %C(blue)<%an>'
	c = commit --verbose
	ca = commit --verbose --amend
	a = add
	co = checkout
	d = diff
	dc = diff --cached
	ai = add -i
	h = help
	f = fetch
	pp = pull --ff-only --prune
	fp = fetch --prune
	bl = branch --list --all -vv
	b = branch
	bd = branch -d
	blm = bl --merged
	blnm = bl --no-merged
	ap = add --patch
	ds = diff --staged
	cob = checkout -b
[credential]
	helper = cache --timeout 600
[help]
	autocorrect = 15
[grep]
	lineNumber = true
[diff]
	mnemonicprefix = true
[gc]
	reflogexpire = 1 year
	reflogexpireunreachable = 120 days
	pruneexpire = 120 days
[pull]
	ff = only
