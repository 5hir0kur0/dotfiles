general {
        output_format = "i3bar"
        colors = true
        color_good = "#8e8e8e"
        color_good = "#b9b9b9"
        color_bad = "#dc322f"
        interval = 1
}

# the icons used are from InconsolataGo Nerd Font

#order += "ipv6"
order += "disk /home"
order += "run_watch DHCP"
# order += "run_watch VPN"
order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "volume master"
#order += "load"
#order += "tztime tokyo"
order += "tztime local"

wireless _first_ {
        format_up = "直 (%quality at %essid, %bitrate) %ip"
        format_down = "睊"
        color_bad = "#b9b9b9"
}

ethernet _first_ {
        # if you use %speed, i3status requires the cap_net_admin capability
        #  is also a nice icon
        format_up = " %ip (%speed)"
        format_down = ""
}

battery 0 {
        #format = "%status %percentage %remaining %emptytime"
        format = "%status %percentage %remaining"
        #status_chr = "⚡ CHR"
        #status_bat = "🔋 BAT"
        #status_unk = "? UNK"
        #status_full = "☻ FULL"
        status_chr = ""
        status_bat = ""
        status_unk = ""
        status_full = ""
        path = "/sys/class/power_supply/BAT%d/uevent"
        integer_battery_capacity = true
        hide_seconds = true
        format_down = ""
        low_threshold = 10
        threshold_type = percentage
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
        color_good = "#98971a"
        format_down = ""
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
        color_good = "#98971a"
        color_bad = "#b9b9b9"
        format = "廬 %status"
}

path_exists VPN {
        path = "/sys/class/net/tun0"
        # color_good = "#98971a"
        # color_bad = "#b9b9b9"
        color_good = "#b9b9b9"
        format = "廬 %status"
}

tztime local {
        format = " %a %Y-%m-%d  %H:%M:%S"
}

volume master {
        # format = "♪ %volume"
        # format_muted = "♪ (%volume)"
        format = "墳 %volume"
        format_muted = "婢 %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

