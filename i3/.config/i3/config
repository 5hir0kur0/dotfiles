# resize window (you can also use the mouse for that)
set $mode_resize "resize: hjkl, default 20px, ctrl -> 1px, alt -> 50px, shift -> 80px, g -> grow, s -> shrink, scroll -> height, shift+scroll -> width"
mode $mode_resize {
    bindsym ctrl+h resize shrink width  1 px
    bindsym ctrl+j resize grow   height 1 px
    bindsym ctrl+k resize shrink height 1 px
    bindsym ctrl+l resize grow   width  1 px

    bindsym h resize shrink width  20 px
    bindsym j resize grow   height 20 px
    bindsym k resize shrink height 20 px
    bindsym l resize grow   width  20 px

    bindsym shift+h resize shrink width  80 px
    bindsym shift+j resize grow   height 80 px
    bindsym shift+k resize shrink height 80 px
    bindsym shift+l resize grow   width  80 px

    bindsym Mod1+h resize shrink width  50 px
    bindsym Mod1+j resize grow   height 50 px
    bindsym Mod1+k resize shrink height 50 px
    bindsym Mod1+l resize grow   width  50 px

    bindsym --whole-window --border button4 resize shrink height 5 px or 5 ppt
    bindsym --whole-window --border button5 resize grow height 5 px or 5 ppt
    bindsym --whole-window --border shift+button4 resize shrink width 5 px or 5 ppt
    bindsym --whole-window --border shift+button5 resize grow width 5 px or 5 ppt

    bindsym g mode $mode_resize_grow
    bindsym s mode $mode_resize_shrink

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r exec --no-startup-id $centerscript, mode $mode_resize

set $mode_resize_grow "[resize] grow: hjkl, default 20px, ctrl -> 1px, alt -> 50px, shift -> 80px, scroll up -> height, scroll down -> width"
mode $mode_resize_grow {
    bindsym ctrl+h resize grow left  1 px
    bindsym ctrl+j resize grow down  1 px
    bindsym ctrl+k resize grow up    1 px
    bindsym ctrl+l resize grow right 1 px

    bindsym h resize grow left  20 px
    bindsym j resize grow down  20 px
    bindsym k resize grow up    20 px
    bindsym l resize grow right 20 px

    bindsym shift+h resize grow left  80 px
    bindsym shift+j resize grow down  80 px
    bindsym shift+k resize grow up    80 px
    bindsym shift+l resize grow right 80 px

    bindsym Mod1+h resize grow left  50 px
    bindsym Mod1+j resize grow down  50 px
    bindsym Mod1+k resize grow up    50 px
    bindsym Mod1+l resize grow right 50 px

    bindsym --whole-window --border button4 resize grow height 5 px or 5 ppt
    bindsym --whole-window --border button5 resize grow width  5 px or 5 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_resize_shrink "[resize] shrink: hjkl, default 20px, ctrl -> 1px, alt -> 50px, shift -> 80px, scroll up -> height, scroll down -> width"
mode $mode_resize_shrink {
    bindsym ctrl+h resize shrink left  1 px
    bindsym ctrl+j resize shrink down  1 px
    bindsym ctrl+k resize shrink up    1 px
    bindsym ctrl+l resize shrink right 1 px

    bindsym h resize shrink left  20 px
    bindsym j resize shrink down  20 px
    bindsym k resize shrink up    20 px
    bindsym l resize shrink right 20 px

    bindsym shift+h resize shrink left  80 px
    bindsym shift+j resize shrink down  80 px
    bindsym shift+k resize shrink up    80 px
    bindsym shift+l resize shrink right 80 px

    bindsym Mod1+h resize shrink left  50 px
    bindsym Mod1+j resize shrink down  50 px
    bindsym Mod1+k resize shrink up    50 px
    bindsym Mod1+l resize shrink right 50 px

    bindsym --whole-window --border button4 resize shrink height 5 px or 5 ppt
    bindsym --whole-window --border button5 resize shrink width  5 px or 5 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# resize using the mouse
bindsym --whole-window --border $mod+button4 resize shrink height 5 px or 5 ppt
bindsym --whole-window --border $mod+button5 resize grow height 5 px or 5 ppt
bindsym --whole-window --border $mod+shift+button4 resize shrink width 5 px or 5 ppt
bindsym --whole-window --border $mod+shift+button5 resize grow width 5 px or 5 ppt

# turn borders on/off/1pixel
bindsym $mod+Ctrl+b border toggle

set $mode_system "system: (l) lock, (e) logout, (s) suspend, (r) reboot, (shift+s) shutdown, (ctrl+s) hybrid sleep, (h) hibernate"
mode $mode_system {
    bindsym l exec --no-startup-id       $exitscript lock, mode "default"
    bindsym e exec --no-startup-id       $exitscript logout, mode "default"
    bindsym s exec --no-startup-id       $exitscript suspend, mode "default"
    bindsym h exec --no-startup-id       $exitscript hibernate, mode "default"
    bindsym r exec --no-startup-id       $exitscript reboot, mode "default"
    bindsym Shift+s exec --no-startup-id $exitscript shutdown, mode "default"
    bindsym Ctrl+s exec --no-startup-id  $exitscript hybrid_sleep, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode $mode_system

set $mode_command "command: (t)oggle def. sink, (m)ove inputs to def. sink, (p)ause dunst, (r)esume dunst, (T)oggle mouse, (u) volume++ / (d) volume-- [shift => force], (0-9) set volume"
mode $mode_command {
    bindsym t exec --no-startup-id $pulsescript toggle, mode "default"
    bindsym m exec --no-startup-id $pulsescript move, mode "default"
    bindsym p exec --no-startup-id killall -SIGUSR1 dunst, mode "default"
    bindsym r exec --no-startup-id killall -SIGUSR2 dunst, mode "default"
    bindsym Shift+t exec --no-startup-id $mousescript toggle, mode "default"

    bindsym 0, mode $volume_0
    bindsym 1, mode $volume_1
    bindsym 2, mode $volume_2
    bindsym 3, mode $volume_3
    bindsym 4, mode $volume_4
    bindsym 5, mode $volume_5
    bindsym 6, mode $volume_6
    bindsym 7, mode $volume_7
    bindsym 8, mode $volume_8
    bindsym 9, mode $volume_9

    bindsym u exec --no-startup-id $pulsescript up 1
    bindsym d exec --no-startup-id $pulsescript down 1
    bindsym Shift+u exec --no-startup-id $pulsescript force_up
    bindsym Shift+d exec --no-startup-id $pulsescript force_down

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+x mode $mode_command

