# brightness
bindsym $mod+plus exec --no-startup-id light -N 0.5 && light -A 10
bindsym $mod+minus exec --no-startup-id light -N 0.5 && light -U 10
bindsym $mod+F6 exec --no-startup-id light -N 0.5 && light -A 10
bindsym $mod+F5 exec --no-startup-id light -N 0.5 && light -U 10

